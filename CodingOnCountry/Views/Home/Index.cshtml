    <!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!-- CAMP GALLERY SECTION /////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->

    <div class="container" id="camps">

        <!-- Recent Camps /////////////////////////////////////////////////////////////////////////////////////////////////////-->
        <div id="recentCamps">

            <!-- Title Section ------------------------------------------------------------->

            <header class="campHeader">
                <h2 class="minorHeader">Past Camps</h2>
                <h2>Recent Camps</h2>
                <h2 class="minorHeader">Upcoming Camps</h2>
            </header>


            <!-- Blog List ----------------------------------------------------------------->

            <div class="blogContainer" id="recentContainer">

                @foreach (var item in Model)
                {     
                    <div class="singleBlog">
                        <div class="campContent">
                            <div class="blogHead">
                                <h3> @Html.DisplayFor(modelItem => item.Name) </h3>
                                <h4> @Html.DisplayFor(modelItem => item.CampAddress) |  @Html.DisplayFor(modelItem => item.CampCommunity) </h4>
                                <p class="blogDate">@Html.DisplayFor(modelItem => item.CampDate) </p>
                            </div> <!-- /blogHead -->

                            <p class="blogText">@Html.DisplayFor(modelItem => item.Description)</p> <!-- Camp Description -->
                            <a href="#camps" class="btn blogLink" onclick="selectGallery(); gallerySelect('@GetGalleryID()')"> View Gallery </a> <!-- Insert gallery ID (Replace 'gallery_001', must have single quotes) -->

                        </div><!-- /campContent -->
                    </div> <!-- /singleBlog -->

                    IncrementCampID();
                }
            @{ 
                ResetCampID();
            }
              

            </div><!-- /blogContainer -->
            <!-- Galleries ----------------------------------------------------------------->
            <div id="localGalleries">
            </div>
    
            
            <!-- External Galleries -------------------------->
            <div id="linkedGalleries">
                @foreach (var item in Model)
                {
                    <div class="individualGallery" id="@GetGalleryID()">
                        <a href="#camps" class="mobileBack" onclick="revertGallery(); galleryDeselect('@GetGalleryID()')"> &lt Back</a>
                        <a href="#camps" class="baseButton backButton" onclick="revertGallery(); galleryDeselect('@GetGalleryID()')">Back</a>

                        <div class="galleryMain fbGallery">
                            <div class="campDetails">
                                <h3>Facebook</h3>
                                <p> @Html.DisplayFor(modelItem => item.Description) </p>

                            </div><!-- /campDetails -->
                            <iframe src="@Html.DisplayFor(modelItem => item.EmbededFacebookAlbumLink)" width="500" height="650" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
                        </div>
                    </div>
                    IncrementCampID();
                 }
                @{ 
                    ResetCampID();
                }
            



            </div> <!-- /linkedGalleries -->



        </div> <!-- /recentCamps -->










        <div id="pastCamps">
            <header class="campHeader">
                <h2>Past Camps</h2>
                <h2 class="minorHeader">Recent Camps</h2>
                <h2 class="minorHeader">Upcoming Camps</h2>
            </header>

            <p>Section Not Yet Implemented</p>

